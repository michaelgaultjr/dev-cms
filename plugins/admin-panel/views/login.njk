{% extends "_base.njk" %}

{% block content %}
    <div class="card bg-dark center-half">
        <header class="card-header">
            <p class="card-header-title">
                Login
            </p>
        </header>
        <div class="card-content">
            <div class="content">
                <form action="/auth/login" enctype="multipart/form-data" method="POST">
                    <div class="field">
                        <p class="control">
                            <input class="input" name="username" placeholder="Username">
                        </p>
                    </div>
                    <div class="field">
                        <p class="control">
                            <input class="input" name="password" type="password" placeholder="Password">
                        </p>
                    </div>
                    <div class="field">
                        <p class="control">
                            <button class="button is-success">
                                Login
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock content%}