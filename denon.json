{
    "$schema": "https://cdn.deno.land/denon/versions/2.3.3/raw/schema.json",
  
    "scripts": {
      "start": {
        "cmd": "deno run src/server.ts",
        "desc": "Run dev-cms in production mode",
        "unstable": true,
        "allow": [
          "net",
          "read",
          "env"
        ],
        "env" :{
          "CACHE-DURATION": "1800",
          "PORT": "3000"
        }
      },
      "dev": {
        "cmd": "deno run src/server.ts",
        "desc": "Run dev-cms in development mode",
        "watch": true,
        "unstable": true,
        "allow": [
          "net",
          "read",
          "env"
        ],
        "env" :{
          "CACHE-DURATION": "30",
          "PORT": "3000"
        }
      }
    }
  }